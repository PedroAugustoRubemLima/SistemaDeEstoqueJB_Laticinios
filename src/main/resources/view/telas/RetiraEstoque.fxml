<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.seuprojeto.lojadesktop.Controller.RetiraEstoqueController"
            prefHeight="500.0" prefWidth="800.0">

    <VBox spacing="10" padding="15" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <Label text="Retirada de Estoque" styleClass="titulo"/>

        <HBox spacing="10">
            <Label text="Cliente:"/>
            <ComboBox fx:id="clienteComboBox" prefWidth="200"/>
            <Label text="Funcionário:"/>
            <ComboBox fx:id="funcionarioComboBox" prefWidth="200"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Data:"/>
            <DatePicker fx:id="dataPicker"/>
            <Label text="Forma de Pagamento:"/>
            <TextField fx:id="formaPagamentoField" prefWidth="200"/>
        </HBox>

        <TableView fx:id="produtosTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="produtoColumn" text="Produto" prefWidth="200"/>
                <TableColumn fx:id="quantidadeColumn" text="Quantidade" prefWidth="100"/>
                <TableColumn fx:id="acaoColumn" text="Ação" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <ComboBox fx:id="produtoComboBox" promptText="Selecionar Produto" prefWidth="300"/>
            <TextField fx:id="quantidadeField" promptText="Qtd" prefWidth="100"/>
            <Button text="Adicionar Produto" onAction="#onAdicionarProduto"/>
        </HBox>

        <Button text="Finalizar Compra" onAction="#onFinalizarCompra" maxWidth="200" styleClass="botaoPrincipal"/>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.seuprojeto.lojadesktop.controller.ClienteCadastroController">

    <children>
        <Label layoutX="14.0" layoutY="20.0" text="Nome:"/>
        <TextField fx:id="nomeField" layoutX="80.0" layoutY="16.0" prefWidth="250"/>

        <Label layoutX="14.0" layoutY="60.0" text="CPF:"/>
        <TextField fx:id="cpfField" layoutX="80.0" layoutY="56.0" prefWidth="250"/>

        <Label layoutX="14.0" layoutY="100.0" text="Telefone:"/>
        <TextField fx:id="telefoneField" layoutX="80.0" layoutY="96.0" prefWidth="250"/>

        <Button layoutX="80.0" layoutY="140.0" text="Salvar" onAction="#salvarCliente"/>
        <Button layoutX="180.0" layoutY="140.0" text="Cancelar" onAction="#cancelar"/>
    </children>
</AnchorPane>

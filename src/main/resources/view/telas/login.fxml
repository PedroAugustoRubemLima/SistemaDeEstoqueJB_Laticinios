<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" styleClass="login-background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuprojeto.lojadesktop.controller.LoginController">

    <children>
        <VBox alignment="CENTER" layoutX="250" layoutY="120" spacing="15" styleClass="login-box">
            <children>
                <Label alignment="CENTER" maxWidth="Infinity" styleClass="login-title" text="JB LATICÍNIOS" />

                <VBox spacing="5">
                    <Label styleClass="login-label" text="USUÁRIO:" />
                    <TextField fx:id="txtUsuario" styleClass="login-field" />
                </VBox>

                <VBox spacing="5">
                    <Label styleClass="login-label" text="SENHA:" />
                    <PasswordField fx:id="txtSenha" styleClass="login-field" />
                </VBox>

                <Button fx:id="loginButton" maxWidth="Infinity" onAction="#logar" styleClass="login-button" text="LOGIN" />
                <Label fx:id="lblMensagem" styleClass="login-message" />

            </children>
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>

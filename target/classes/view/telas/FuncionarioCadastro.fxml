<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="default-screen-background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuprojeto.lojadesktop.controller.FuncionarioCadastroController">

    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <Label text="Cadastro de Funcionário">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Formulário de Cadastro -->
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="301.0" minWidth="56.0" prefWidth="62.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="686.0" minWidth="100.0" prefWidth="680.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nomeField" prefHeight="31.0" prefWidth="599.0" promptText="Nome do Funcionário" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="cpfField" promptText="CPF (Opcional)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="telefoneField" promptText="Telefone (Opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button onAction="#salvarFuncionario" text="Salvar" />
            <Button onAction="#limparCampos" text="Limpar Campos" />
            <Button onAction="#cancelar" text="Cancelar" />
        </HBox>

        <Separator prefWidth="200.0" />

        <!-- Seção de Listagem e Pesquisa -->
        <Label text="Funcionários Cadastrados">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TextField fx:id="txtPesquisar" onKeyReleased="#pesquisarFuncionario" promptText="Pesquisar por nome ou CPF..." />

        <TableView fx:id="funcionariosTable" prefHeight="250.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="214.0" text="Nome" />
                <TableColumn fx:id="colCpf" prefWidth="145.0" text="CPF" />
                <TableColumn fx:id="colTelefone" prefWidth="170.0" text="Telefone" />
                <TableColumn fx:id="colAcao" prefWidth="223.0" text="Ação" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
